# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.{html,css,scss,json,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.py]
line_length = 88
known_first_party = care,config
multi_line_output = 3
default_section = THIRDPARTY
recursive = true
skip = venv/
force_grid_wrap = 0
use_parentheses = true
